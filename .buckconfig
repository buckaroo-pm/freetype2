[project]
  ignore = .git

[parser]
  default_build_file_syntax = SKYLARK

[cxx]
  should_remap_host_platform = true
  untracked_headers_whitelist = /usr/include/.*, /usr/lib/gcc/x86_64-linux-gnu/.*

[cxx#linux-x86_64]
  should_remap_host_platform = true
  cflags = -std=c11
  untracked_headers_whitelist = /usr/include/.*, /usr/lib/gcc/x86_64-linux-gnu/.*

[cxx#macosx-x86_64]
  should_remap_host_platform = true
  cflags = -std=c11
  untracked_headers_whitelist = /usr/include/.*, /usr/lib/gcc/x86_64-linux-gnu/.*
